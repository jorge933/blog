<% if (noposts !== true) { %>
    <% posts.forEach(posts => { %>
        <div class="post-container search">
            <a href="/post/<%= posts.id %>">
                <div class="header-post">
                    <a href="/user/<%= posts.author_name %>"><img src="<%= posts.author_photo %>" alt="Imagem de perfil do criador" width="50"></a>
                    <a href="/user/<%= posts.author_name %>">
                        <span class="name">
                            <%= posts.author_name %>
                        </span>
                    </a>
                </div>

                <div class="main-post">
                    <h2 class="title-post">
                        <% if (posts.title.length>= 20) { %>

                            <%= posts.title.substr(0, 20) + '...' %>
                        <% } else { %>
                            <%= posts.title %>
                        <% } %>
                    </h2>
                    <p class="content-post">
                            <% if (posts.content.length>= 170) { %>
                                <%= posts.content.substr(0, 170) + '...' %>
                            <% } else { %>
                                    <%= posts.content %>
                            <% } %>
                    </p>
                </div>

                <div class="footer-post"> <span class="lang <%= posts.lang.toLowerCase().replace(' ', '-') %>">
                        <%= posts.lang %>
                    </span> </div>
            </a>
        </div>
        <% }) } else { %>
            <p class="noposts">Nenhum post criado</p>
            <% } %>